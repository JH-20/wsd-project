<%- include('./partials/header.ejs') %>

<div class="container">

<% 
var errors = errors ? errors : []
var email = email ? email : "" 
%>

<h3>Register an account for the self-monitoring application</h3>
<p>(I strongly recommend using a made up email for security purposes)</p>
<form method="POST" action="/auth/registration">
  <label for="email">Email</label>
  <input type="email" name="email" value="<%= email %>" />
  <%- include('partials/error.ejs', { errors: errors, attribute: 'email'}) %>
  <br>
  <label for="password">Password</label>
  <input type="password" name="password" />
  <%- include('partials/error.ejs', { errors: errors, attribute: 'password'}) %>
  <br>
  <label for="verification">Verify the password by typing it again</label>
  <input type="password" name="verification" />
  <%- include('partials/error.ejs', { errors: errors, attribute: 'verification'}) %>
  <br>
  <input type="submit" value="Submit" />
</form>

<h3>Already have an account? Login here!</h3>
<form method="GET" action="/auth/login">
  <input type="submit" value="Login" />
</form>

</div>

<%- include('./partials/footer.ejs') %>